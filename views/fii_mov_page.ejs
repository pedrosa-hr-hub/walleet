<%- include ('partials/header.ejs');%>

<%- include ('partials/header_navbar.ejs');%>

<body>
     <div class="container mt-5">

          <div class="card">
               <div class="card-header">
                    <h1>Operação com FUNDOS IMOBILIÁRIOS:</h1>
               </div>
               <div class="card-body">
                    <form>
                         <div class="form-group mt-2">
                              <label for="tickerFII">Ticker do Fundo:</label>
                              <input class="form-control" type="text" name="tiker-stock" placeholder="Exemplo: BTLG11, MXRF11" required>
                         </div>
                         <div class="form-group mt-2">
                              <label for="dateFII">Data da operação:</label>
                              <input class="form-control" type="date" name="date-stock" required>
                         </div>
                         <div class="form-group mt-2">
                              <label for="operationDetails">Operação de:</label>
                              <div class="form-check">
                                   <input class="form-check-input" type="checkbox" value="buy" name="type_operation_buy_FII">
                                   <label class="form-check-label" for="defaultCheck1">
                                     COMPRA
                                   </label>
                              </div>
                              <div class="form-check">
                                   <input class="form-check-input" type="checkbox" value="sale" name="type_operation_sale_FII">
                                   <label class="form-check-label" for="defaultCheck1">
                                     VENDA
                                   </label>
                              </div>
                         </div>
                         <div class="form-group mt-2">
                              <label for="quantyOperation">Quantidade:</label>
                              <input class="form-control" type="number" name="quanty-operation_FII" step="1" min="1" placeholder="Exemplo: 150" required>
                         </div>
                         <div class="form-group mt-2">
                              <label for="valueOperation">Valor:</label>
                              <input class="form-control" type="number" name="tiker-stock_FII" name="quantity" step="0.01" min="0.01" placeholder="Exemplo: 1.000,55" required>
                         </div>
                              <button class="btn btn-success" type="submit">Salvar Operação</button>
                    </form>
               </div>
          </div>
     <div>
</body>

<%- include ('partials/footer.ejs');%>